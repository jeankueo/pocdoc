<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ci="sap.ciconnect.control"
		controllerName="sap.ciconnect.view.pipelines" xmlns:html="http://www.w3.org/1999/xhtml">
		
	<FlexBox direction="Column" alignItems="SpaceBetween" >
		<items>
			<Toolbar>
				<content>
					<SearchField placeholder="Search"  width="100%" liveChange="onSearch"/>
				</content>
			</Toolbar>
			
			<List id="pipelineList"
				items="{pipeline>/}"
				mode="SingleSelectLeft"
				includeItemInSelection="true"
				selectionChange="onSelectionChange">
				<CustomListItem>
					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<HBox>
							<core:Icon size="1rem" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom ciconnectIcon"
								src="sap-icon://{= ${pipeline>sapPredefined} ? 'sap-logo-shape' : 'customize'}"/>
							<Link text="{pipeline>name}" target="_blank" href="{pipeline>html_url}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"/>
							<ObjectNumber number="{pipeline>countOfRepoAssigned}" unit="Repo assigned" class="sapUiSmallMargin"
								state="{path: 'pipeline>countOfRepoAssigned', formatter: '.formatter.pipeLineAssignedRepoState'}"/>
						</HBox>
						<ci:Pipeline type="{pipeline>type}" jobs="{path:'pipeline>abstract/stages', templateShareable: true}"
							jobStyle="{setting>/jobStyle}" enableConnection="{setting>/enableConnection}" enableText="{setting>/enableText}"
							enableTwoRow="{setting>/enableTwoRow}">
							<ci:jobs>
								<ci:Job goal="{pipeline>name}" type="{pipeline>type}" shortTooltip="{pipeline>short_desc}" serviceLink="{pipeline>link}"/>
							</ci:jobs>
						</ci:Pipeline>
					</HBox>
				</CustomListItem>
			</List>
		</items>
	</FlexBox>
</mvc:View>