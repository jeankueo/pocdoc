<mvc:View
	controllerName="sap.ciconnect.view.summary"
	xmlns="sap.suite.ui.microchart"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:ci="sap.ciconnect.control"
	xmlns:m="sap.m">
		<m:GenericTile press="onPress" header="Pipeline Report" subheader="Pipelines in Use" frameType="Auto">
			<m:tileContent>
				<m:TileContent footer="90%">
					<m:content>
						<!-- <RadialMicroChart percentage="95" valueColor="Good"/> -->
						<ci:BOControl moduleName="weather-icon" controlName="WeatherIcon" props="{score: 90, size: 'large'}"
							class="ciconnectSummaryWeather"/>
					</m:content>
				</m:TileContent>
			</m:tileContent>
		</m:GenericTile>
		<m:GenericTile header="Service Report" subheader="Failed Jobs" frameType="Auto">
			<m:tileContent>
				<m:TileContent footer="70%">
					<m:content>
						<!-- <RadialMicroChart percentage="30" valueColor="Error"/> -->
						<ci:BOControl moduleName="weather-icon" controlName="WeatherIcon" props="{score: 30, size: 'large'}"
							class="ciconnectSummaryWeather" />
					</m:content>
				</m:TileContent>
			</m:tileContent>
		</m:GenericTile>
		<m:GenericTile press="onPress" header="Repository Report" subheader="Pipeline Actived Repo" frameType="Auto">
			<m:tileContent>
				<m:TileContent footer="30%">
					<m:content>
						<!-- <RadialMicroChart percentage="60" valueColor="Neutral"/> -->
						<ci:BOControl moduleName="weather-icon" controlName="WeatherIcon" props="{score: 60, size: 'large'}"
							class="ciconnectSummaryWeather" />
					</m:content>
				</m:TileContent>
			</m:tileContent>
		</m:GenericTile>
</mvc:View>