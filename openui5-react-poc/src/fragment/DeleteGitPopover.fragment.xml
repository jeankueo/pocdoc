<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		class="sapUiContentPadding"
		title="Delete Git Repository"
		placement="Top">
		<List id="popoverList"
			items="{/}"
			mode="MultiSelect"
			includeItemInSelection="true">
			<StandardListItem 
				title="{full_name}"/>
		</List>
		<Toolbar>
			<ToolbarSpacer />
			<Button text="Select All" press="onSelectAllOnPopover"/>
			<Button text="Deselect All" press="onDeselectAllOnPopover"/>
			<Button text="Confirm" type="Accept" press="onDeleteGitRepo"/>
			<Button text="Cancel" type="Reject" press="closePopover"/>
		</Toolbar>
	</Popover>
</core:FragmentDefinition>