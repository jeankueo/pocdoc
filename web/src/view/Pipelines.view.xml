<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ci="sap.ciconnect.control" xmlns:layout="sap.ui.layout"
		controllerName="sap.ciconnect.controller.Pipelines" xmlns:html="http://www.w3.org/1999/xhtml">
	<Toolbar>
		<content>
			<Select
				id="categorySelect"
				forceSelection="false"
				selectedKey="ALL"
				showSecondaryValues= "true"
				width="150px"
				tooltip="Pipeline Categories"
				items="{
					path: 'category>/',
					sorter: { path: 'text' }}"
				change="onSelectChange">
				<core:ListItem key="{category>key}" text="{category>text}" additionalText="{category>count}"/>
			</Select>
			<SearchField id="searchField" placeholder="Search"  width="100%" liveChange="onSearch" />
		</content>
	</Toolbar>
	<layout:Splitter width="100%" resize="onContainerResize">
		<layout:contentAreas>
			<List id="pipelineList"
				items="{pipeline>/d/results}"
				mode="SingleSelectLeft"
				includeItemInSelection="true"
				selectionChange="onSelectionChange">
				<CustomListItem>
					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<VBox>
							<HBox class="sapUiSmallMarginTop">
								<Link text="{pipeline>name}" target="_blank" href="{pipeline>html_url}" />
								<core:Fragment fragmentName="sap.ciconnect.fragment.PipelineBadgeIcons" type="XML" 
									class="sapUiSmallMarginBegin"/>
							</HBox>
							<Text text="{pipeline>description}"/>
						</VBox>
						<HBox alignItems="Center">
							<ci:BOControl moduleName="PipelineGraph" controlName="PipelineGraph" props="{pipeline>abstract}">
								<ci:boEvents>
									<ci:BOEvent name="onNodeClick" handle="onPipelineNodeClick" />
								</ci:boEvents>
							</ci:BOControl>
							<Button icon="sap-icon://feeder-arrow" type="Transparent" press="onNavDetail" tooltip="Show Pipeline Detail"/>
						</HBox>
					</HBox>
				</CustomListItem>
			</List>
		</layout:contentAreas>
	</layout:Splitter>
</mvc:View>