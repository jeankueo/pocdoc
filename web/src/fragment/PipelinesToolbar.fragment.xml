<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<Toolbar>
		<content>
			<Select
				id="categorySelect"
				forceSelection="false"
				selectedKey="ALL"
				showSecondaryValues= "true"
				width="150px"
				tooltip="Pipeline Categories"
				items="{
					path: 'category>/',
					sorter: { path: 'text' }}"
				change="onSelectChange">
				<core:ListItem key="{category>key}" text="{category>text}" additionalText="{category>count}"/>
			</Select>
			<SearchField id="searchField" placeholder="Search"  width="100%" liveChange="onSearch" />
			<SegmentedButton>
				<Button icon="sap-icon://list" />
				<Button icon="sap-icon://grid" />
			</SegmentedButton>
		</content>
	</Toolbar>

</core:FragmentDefinition>