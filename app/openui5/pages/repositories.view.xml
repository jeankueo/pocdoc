<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="sap.ciconnect.repositories" xmlns:html="http://www.w3.org/1999/xhtml">
	<FlexBox direction="Column" alignItems="SpaceBetween" >
		<items>
			<Toolbar>
				<content>
					<SearchField placeholder="Search"  width="100%"/>
				</content>
			</Toolbar>
			<List
				id="github"
				items="{github>/}"
				includeItemInSelection="true" >
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="Github" level="H2"/>
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</headerToolbar>
				<StandardListItem
					title="{github>full_name}"
					description="{github>description}"
					icon="sap-icon://tree"
					iconDensityAware="false"
					iconInset="false"
					press="handlePress"
					detailPress="handleDetailPress" />
			</List>
			<List
				id="git"
				items="{git>/}"
				includeItemInSelection="true" >
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="Git/Gerrit" level="H2"/>
							<ToolbarSpacer />
							<Button icon="sap-icon://add"/>
						</content>
					</Toolbar>
				</headerToolbar>
				<StandardListItem
					title="{full_name}"
					description="{description}"
					icon="sap-icon://tree"
					iconDensityAware="false"
					iconInset="false"
					press="handlePress"
					detailPress="handleDetailPress" />
			</List>
		</items>
	</FlexBox>
</core:View>