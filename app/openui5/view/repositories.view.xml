<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ci="sap.ciconnect.control"
		controllerName="sap.ciconnect.view.repositories" xmlns:html="http://www.w3.org/1999/xhtml">
	<FlexBox direction="Column" alignItems="SpaceBetween" >
		<items>
			<Toolbar>
				<content>
					<SearchField placeholder="Search"  width="100%"/>
				</content>
			</Toolbar>
			<List
				id="github"
				items="{github>/}"
				includeItemInSelection="true" >
				<headerToolbar>
					<Toolbar>
						<content>
							<core:Icon size="1.5rem" src="sap-icon://oct/octicon-mark-github"/>
							<Title text="Github" level="H2"/>
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</headerToolbar>
				<CustomListItem>
					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<HBox>
							<core:Icon size="2rem" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
								src="sap-icon://oct/{= ${github>private} ? 'octicon-shield' : (${github>fork} ? 'octicon-repo-forked' : 'octicon-repo')}" />
							<VBox  class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<Link text="{github>full_name}" target="_blank" href="{github>html_url}"/>
								<Text text="{github>description}"/>
							</VBox>
						</HBox>
						<ci:Pipeline type="{type}" jobs="{path:'github>pipeline/jobs', templateShareable: true}">
							<ci:jobs>
								<ci:Job goal="{github>goal}" type="{github>type}" status="{github>status}" shortTooltip="status: {github>status}"/>
							</ci:jobs>
						</ci:Pipeline>
					</HBox>
				</CustomListItem>
			</List>
			<List
				id="git"
				items="{git>/}"
				includeItemInSelection="true" >
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="Git/Gerrit" level="H2"/>
							<ToolbarSpacer />
							<Button icon="sap-icon://add"/>
						</content>
					</Toolbar>
				</headerToolbar>
				<CustomListItem>
					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<HBox>
							<core:Icon size="2rem" src="sap-icon://tree" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
							<VBox  class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<Link text="{git>full_name}" target="_blank" href="{git>html_url}"/>
								<Text text="{git>description}"/>
							</VBox>
						</HBox>
						<ci:Pipeline type="{type}" jobs="{path:'git>pipeline/jobs', templateShareable: true}">
							<ci:jobs>
								<ci:Job goal="{git>goal}" type="{git>type}" status="{git>status}" shortTooltip="status: {git>status}"/>
							</ci:jobs>
						</ci:Pipeline>
					</HBox>
				</CustomListItem>
			</List>
		</items>
	</FlexBox>
</core:View>