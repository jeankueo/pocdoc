<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ci="sap.ciconnect.control"
		controllerName="sap.ciconnect.view.repositories" xmlns:html="http://www.w3.org/1999/xhtml">
	<FlexBox direction="Column" alignItems="SpaceBetween" >
		<items>
			<Toolbar>
				<content>
					<SearchField placeholder="Search"  width="100%" liveChange="onSearch"/>
				</content>
			</Toolbar>
			<List
				id="githubList"
				items="{github>/}"
				includeItemInSelection="true" >
				<headerToolbar>
					<Toolbar>
						<content>
							<core:Icon size="1.5rem" src="sap-icon://oct/octicon-mark-github" tooltip="Github Repositories" class="ciconnectIcon"/>
							<Title text="Github" level="H2"/>
							<ToolbarSpacer />
						</content>
					</Toolbar>
				</headerToolbar>
				<CustomListItem>
					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<HBox>
							<core:Icon size="1rem" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom ciconnectIcon"
								src="sap-icon://oct/{= ${github>private} ? 'octicon-shield' : (${github>fork} ? 'octicon-repo-forked' : 'octicon-repo')}" />
							<VBox  class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<Link text="{github>full_name}" target="_blank" href="{github>html_url}"/>
								<Text text="{github>description}"/>
							</VBox>
						</HBox>
						<ci:Pipeline type="{github>type}" jobs="{path:'github>pipeline/jobs', templateShareable: true}" titleFirst="false"
							 tileHeight="20" tileWidth="30">
							<ci:title>
								<Label text="{github>pipeline/name}" tooltip="{github>pipeline/name}"/>
							</ci:title>
							<ci:jobs>
								<ci:Job goal="{github>goal}" type="{github>type}" status="{github>status}" shortTooltip="status: {github>status}"/>
							</ci:jobs>
						</ci:Pipeline>
					</HBox>
				</CustomListItem>
			</List>
			<List
				id="gitList"
				items="{git>/}"
				includeItemInSelection="true" >
				<headerToolbar>
					<Toolbar>
						<content>
							<core:Icon size="1.5rem" src="sap-icon://awesome/fa-git-square" tooltip="Git/Gerrit Repositories"
								class="ciconnectIcon"/>
							<Title text="Git/Gerrit" level="H2"/>
							<ToolbarSpacer />
							<Label text="Add Git Repo:" />
							<Input placeholder="ssh://xxx@xxx.git or https://xxx@xxx.git" width="300px" submit="onAddGitRepo"/>
						</content>
					</Toolbar>
				</headerToolbar>
				<CustomListItem>
					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<HBox>
							<core:Icon size="1rem" src="sap-icon://oct/octicon-repo" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom ciconnectIcon" />
							<VBox  class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<Link text="{git>full_name}" target="_blank" href="{git>html_url}"/>
								<Text text="{git>description}"/>
							</VBox>
						</HBox>
						<ci:Pipeline type="{git>pipeline/type}" jobs="{path:'git>pipeline/jobs', templateShareable: true}" titleFirst="false"
							 tileHeight="20" tileWidth="30">
							<ci:title>
								<Label text="{git>pipeline/name}" tooltip="{git>pipeline/name}"/>
							</ci:title>
							<ci:jobs>
								<ci:Job goal="{git>goal}" type="{git>type}" status="{git>status}" shortTooltip="status: {git>status}"/>
							</ci:jobs>
						</ci:Pipeline>
					</HBox>
				</CustomListItem>
			</List>
		</items>
	</FlexBox>
</core:View>