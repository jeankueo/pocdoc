<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.ciconnect.control" xmlns:m="sap.m"
		controllerName="sap.ciconnect.view.pipelines" xmlns:html="http://www.w3.org/1999/xhtml">
		
	<m:FlexBox direction="Column" alignItems="Start" items="{/}">
		<m:items>
			<Pipeline type="{type}" jobs="{path:'jobs', templateShareable: true}">
				<title>
					<m:Text text="{name}:" />
				</title>
				<jobs>
					<Job goal="{goal}" type="{type}" shortTooltip="{short_desc}"/>
				</jobs>
			</Pipeline>
		</m:items>
	</m:FlexBox>
</core:View>