<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:ci="sap.ciconnect.control"
		controllerName="sap.ciconnect.view.pipelines" xmlns:html="http://www.w3.org/1999/xhtml">
		
	<FlexBox direction="Column" alignItems="SpaceBetween" >
		<items>
			<Toolbar>
				<content>
					<SearchField placeholder="Search"  width="100%" liveChange="onSearch"/>
				</content>
			</Toolbar>
			
			<List id="pipelineList"
				items="{/}"
				includeItemInSelection="true" >
				<CustomListItem>
					<HBox alignItems="Start" justifyContent="SpaceBetween">
						<HBox>
							<core:Icon size="2rem" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
								src="sap-icon://awesome/fa-pied-piper-pp" />
							<VBox  class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
								<Link text="{name}" target="_blank" href="{github>html_url}"/>
								<Text text="{description}"/>
							</VBox>
						</HBox>
						<ci:Pipeline type="{type}" jobs="{path:'jobs', templateShareable: true}">
							<ci:jobs>
								<ci:Job goal="{goal}" type="{type}" shortTooltip="{short_desc}"/>
							</ci:jobs>
						</ci:Pipeline>
					</HBox>
				</CustomListItem>
			</List>
		</items>
	</FlexBox>
</core:View>